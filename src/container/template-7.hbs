<div class="hero">
	{{#with hero}}
	<div class="hero_title">{{title}}</div>
	<p class="hero_text">{{description}}</p>
	{{#with button}}
	<a href="{{url}}" class="hero_button">{{text}}</a>
	{{/with}}
	{{/with}}
</div>

<section class="about">
	{{#with about}}
	<div class="about_title">{{heading}}</div>
	<p class="about_info">{{info}}</p>
	{{/with}}
</section>

<main class="card_block">
	<div class="card_header_block">
		<h3 class="card_block_title">Our Articles</h3>
		<a href="#" class="card_header_button">View all</a>
	</div>
	<div class="card_list">


		{{#each articles}}
		{{>articleCardDark}}

		{{/each}}
	</div>
</main>