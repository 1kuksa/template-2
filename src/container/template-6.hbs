<header class="header ">
	<div>
		{{>logo}}
	</div>

	<nav class="header_nav ">
		<div class="header_nav_right">
			{{>nav list=header }}
		</div>

	</nav>
</header>
<main class="main">
	{{#with info}}
	<div class="info">
		<h1 class="info_title">{{title}}</h1>
		<p class="info_text">{{description}}</p>
	</div>
	{{/with}}
	<form class="form">
		{{#with form}}
		<h2 class="form_title">{{title}}</h2>

		<div class="form_input_list">
			{{#each inputs}}
			<input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
				id="form-input-{{id}}">
			{{/each}}
		</div>
		<div class="form_checkbox">

			<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
			<div></div>
			<label for="{{checkbox.name}}">
				{{checkbox.label}}
			</label>
		</div>
		<button type="submit" class="form_button">{{button}}</button>
		<p class="form_info">{{info}}</p>
		{{/with}}
	</form>
</main>

<section class="upd">
	{{#with updates}}

	<h2 class="upd_title">{{title}}</h2>
	{{#each list}}
	<div class="upd_block">
		<div class="upd_img_{{id_img}}">

		</div>
		<div class="upd_list">
			<strong class="upd_list_name">{{nickname}}</strong>
			<p class="upd_list_text">{{description}}</p>
		</div>

	</div>
	{{/each}}
	{{#with show_all}}
	<a href="{{url}}" class="upd_link">{{text}}</a>
	{{/with}}
	{{/with}}
</section>

<section class="exp">
	{{#with expirience}}
	<h3 class="exp_title">{{title}}</h3>
	<div class="exp_badge">{{badge}}</div>
	<div class="exp_list">
		{{#each list}}
		<div class="exp_card">
			<h2 class="exp_card_title">
				{{name}}
			</h2>
			<p class="exp_card_text">{{details}}</p>
		</div>
		{{/each}}

	</div>
	{{/with}}
</section>
<footer class="footer">
	<div>
		{{>logo}}
		<span class="footer_copyright">
			Copyright 2023-2024
		</span>
	</div>


	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{>nav list=links isVertical=true }}
	</div>
	{{/each}}
</footer>