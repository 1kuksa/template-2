<header class="header ">
	<div>
		{{>logo}}
	</div>

	<nav class="header_nav ">
		<div class="header_nav_right">
			{{>nav list=header }}
		</div>

	</nav>
</header>
{{#with main}}
<main class="main">
	<img src="{{image}}" alt="Main image" class="main_image"></img>
	<div class="main_content">
		<h1 class="main_title">{{heading}}</h1>
		<p class="main_text">{{description}}</p>
		<a href="{{href}}" class="button main_button">{{button}}</a>
	</div>
</main>
{{/with}}

<section class="featured">
	{{#each featured}}
	<div class="card_featured">
		<div class="featured_image" style="background-image: url({{photo}})"></div>
		<h2 class="featured_title">{{heading}}</h2>
		<p class="featured_text">{{info}}</p>
		<a href="{{linkUrl}}" class="button featured_button">{{linkText}}</a>
	</div>
	{{/each}}

</section>
<div class="form">
	{{#each actions}}
	<div class="form_info">
		<div class="form_title">{{heading}}</div>
		<a href="{{url}}" class="button form_button">{{text}}</a>
	</div>
	{{/each}}

</div>
<footer class="footer">
	<div>
		{{>logo}}
		<span class="footer_copyright">
			Copyright 2023-2024
		</span>
	</div>


	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{>nav list=links isVertical=true }}
	</div>
	{{/each}}
</footer>